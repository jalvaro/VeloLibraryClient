<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="checkbox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text"></item>
        <item name="android:background">@drawable/btn_check_label_background</item>
        <item name="android:button">@drawable/dra_btn_check_holo_light</item>
    </style>

    <style name="item_padding">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:background">@color/bg_screen</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="item_padding_horizontal" parent="item_padding">
    </style>

    <style name="item_padding_vertical" parent="item_padding">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="item_text_left">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:text">TextView</item>
        <item name="android:textColor">@color/title_text</item>
    </style>

    <style name="item_text_center" parent="item_text_left">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_text_top">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">TextView</item>
        <item name="android:textColor">@color/sel_color_title</item>
    </style>

    <style name="item_text_bottom">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">TextView</item>
        <item name="android:textColor">@color/edit_text</item>
    </style>

    <style name="item_line">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/line</item>
    </style>

    <style name="item_line_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/dra_grad_line</item>
    </style>

    <style name="box_items_padding">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>